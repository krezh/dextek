{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Flux Images and tags",
      groupName: "Flux",
      matchPackagePatterns: ["flux-operator"],
      matchDatasources: ["docker", "github-tags"],
      versioning: "samver",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      separateMinorPatch: true,
    },
    {
      description: "Tofu-Controller Images and tags",
      groupName: "Tofu-Controller",
      matchPackagePatterns: ["tofu-controller"],
      matchDatasources: ["docker", "github-tags"],
      versioning: "samver",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      separateMinorPatch: true,
    },
    {
      description: "Immich Images",
      groupName: "Immich",
      matchPackagePatterns: ["immich"],
      matchDatasources: ["docker", "github-releases"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      separateMinorPatch: true,
      sourceUrl: "https://github.com/immich-app/immich",
    },
    {
      description: "Rook-Ceph charts and image",
      groupName: "Rook-Ceph",
      matchPackagePatterns: ["rook.ceph"],
      matchDatasources: ["helm", "docker"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      separateMinorPatch: true,
    },
    {
      description: "External Snapshotter charts",
