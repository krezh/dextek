{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Separate PRs for main cluster",
      matchFileNames: ["**/clusters/dextek/**"],
      additionalBranchPrefix: "dextek-",
    },
    {
      description: "Separate PRs for storage cluster",
      matchFileNames: ["**/clusters/jotunheim/**"],
      additionalBranchPrefix: "jotunheim-",
    },
  ],
}
